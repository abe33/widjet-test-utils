{
  "name": "widjet-test-utils",
  "version": "0.0.0",
  "description": "A bunch of test utilities for widjet plugins",
  "main": "lib/index.js",
  "jsnext:main": "src/index.es6",
  "scripts": {
    "test": "nyc mocha --timeout 5000 --recursive --compilers js:babel-register test/**/*.es6 test/*.es6",
    "lcov_report": "nyc report --reporter=lcov",
    "coverage": "npm run lcov_report && codecov",
    "babel": "babel src --out-dir .",
    "standard": "standard src/*.es6 test/*.es6",
    "esdoc": "esdoc -c esdoc.json",
    "install": "npm run babel"
  },
  "keywords": [
    "widgets",
    "widget",
    "web",
    "widjet",
    "test utilities",
    "test helpers"
  ],
  "repository": {
    "type": "git",
    "url": "git://github.com/abe33/widjet-test-utils.git"
  },
  "bugs": "http://github.com/abe33/widjet-test-utils/issues",
  "commits": "http://github.com/abe33/widjet-test-utils/commits",
  "author": "Cédric Néhémie <cedric.nehemie@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "babel-eslint": "^4.1.6",
    "babel-register": "^6.14.0",
    "esdoc": "^0.4.0",
    "expect.js": "^0.3.1",
    "mocha": "^2.3.4",
    "mocha-jsdom": "^1.1.0",
    "nyc": "^8.3.0",
    "sinon": "^1.17.4",
    "standard": "^5.4.1",
    "codecov": "^1.0.0"
  },
  "dependencies": {
    "babel-cli": "^6.3.17",
    "babel-preset-es2015": "^6.3.13"
  },
  "standard": {
    "parser": "babel-eslint",
    "globals": [
      "it",
      "describe",
      "beforeEach",
      "afterEach"
    ]
  },
  "babel": {
    "presets": [
      "es2015"
    ],
    "env": {
      "test": {
        "plugins": [
          "istanbul"
        ]
      }
    }
  },
  "nyc": {
    "include": [
      "src/*.es6"
    ],
    "extension": [
      ".es6"
    ],
    "require": [
      "babel-register"
    ]
  }
}
